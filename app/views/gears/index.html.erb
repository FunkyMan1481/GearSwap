<div class="banner">
  <div class="container">

    <h1>Liste des équipements sportifs</h1>
    <div class="cards">
      <% @gears.each do |gear| %>
        <div class="gear-card">
          <%= cl_image_tag gear.photo.key %>
          <h3><%= gear.name %></h3>
          <p><%= gear.description %></p>
          <%= link_to "Réserver", gear_path(gear), class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>

    <div class='container mt-5'>
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
