<div class="container mt-5">


<h1>Détails de l'équipement</h1>

<img src="<%= @gear.image_url %>" alt="Image de l'équipement">
<p>Description : <%= @gear.description %></p>
<p>Prix à la journée : <%= @gear.price %> €</p>

<%= simple_form_for [@gear, @reservation] do |f| %>
  <div class="field">
    <%= f.input :date_de_debut, class: "datepicker" %>
  </div>
  <div class="field">
    <%= f.input :date_de_fin, class: "datepicker" %>
  </div>
  <%= submit_tag "Réserver" %>
<% end %>

