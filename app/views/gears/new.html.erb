<h1>Ajouter un nouvel équipement à louer</h1>

<%= form_for @gear, url: gears_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Créer' %>
  </p>
<% end %>
