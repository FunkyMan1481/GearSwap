<h1>Mon profil</h1>

  <%= form_with(model: current_user, url: profile_path, method: :patch) do |form| %>
    <div class="form-group">
      <%= form.label :nom %>
      <%= form.text_field :nom %>
    </div>

    <div class="form-group">
      <%= form.label :prenom %>
      <%= form.text_field :prenom %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>

    <div class="form-group">
      <%= form.label :telephone %>
      <%= form.text_field :telephone %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= form.label :coord_bancaires %>
      <%= form.password_field :coord_bancaires, autocomplete: "off" %>
    </div>

    <div class="form-group">
      <%= form.submit "Enregistrer" %>
    </div>
  <% end %>
